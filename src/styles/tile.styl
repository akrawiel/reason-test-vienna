.tile-list

  &__tile
    border-radius 1rem
    cursor pointer
    height 20vh
    margin-bottom 1rem
    overflow hidden
    position relative
    width 100%

    &:last-child
      margin-bottom 0

    &__image-container
      position relative
      height 100%
      width 100%

    &__image
      height 100%
      object-fit cover
      width 100%

    &__image-overlay
      background-color #00000080
      height 100%
      left 0
      position absolute
      transition all 0.25s
      top 0
      width 100%

      ^[-1]:hover &
        background-color #00000040

    &__label
      color #e0e0e0
      font-size 2rem
      font-weight 700
      left 1rem
      bottom 1rem
      position absolute
      transition all 0.25s

      ^[-1]:hover &
        bottom calc(100% - 4rem)

    &__description
      bottom 1rem
      color #e0e0e0
      font-size 0.5rem
      left 1rem
      opacity 0
      position absolute
      transition all 0.25s

      ^[-1]:hover &
        opacity 1

      